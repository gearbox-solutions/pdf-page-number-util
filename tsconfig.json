{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["@types/node",],
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./build/assets"
  },
  "typeRoots": ["./node_modules/@types", "src/types"],
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules", "public"]
}
