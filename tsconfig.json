{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ES2022"],
    "types": ["@types/node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "typeRoots": ["./node_modules/@types", "src/types"],
  "include": [
    "src/**/*",
  ],
}
