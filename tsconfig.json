{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "types": ["@types/node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "typeRoots": ["./node_modules/@types", "src/types"],
  "include": [
    "src/**/*",
  ],
}
